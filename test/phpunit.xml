<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="FdlGatewayManager">
            <directory>../../../../../test-reports/FdlGatewayManager</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="../../../../../test-reports/FdlGatewayManager" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../../../../test-reports/FdlGatewayManager/coverage.xml"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
    <filter>
	  <whitelist processUncoveredFilesFromWhitelist="true">
	      <directory suffix=".php">../../FdlGatewayManager</directory>
	      <exclude>
              <directory suffix=".php">../test</directory>
          </exclude>
	  </whitelist>
	</filter>
</phpunit>