<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="LocGatewayManager">
            <directory>../../../../test-reports/LocGatewayManager</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="../../../../test-reports/LocGatewayManager" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../../../test-reports/LocGatewayManager/coverage.xml"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
    <filter>
	  <whitelist processUncoveredFilesFromWhitelist="true">
	      <directory suffix=".php">../../LocGatewayManager</directory>
	      <exclude>
              <directory suffix=".php">../test</directory>
          </exclude>
	  </whitelist>
	</filter>
</phpunit>